    <script type="text/javascript">
        // Full Width
        $("#google-map").gMap({
            controls: {
                draggable: (($.browser.mobile) ? false : true),
                panControl: true,
                zoomControl: true,
                mapTypeControl: true,
                scaleControl: true,
                streetViewControl: true,
                overviewMapControl: true
            },
            scrollwheel: true,
            latitude: -23.62156,
            longitude: -46.74200,
            zoom: 16,
            markers: [
                {
                    latitude: -23.62156,
                    longitude: -46.74200,
                    html: "Escritório da Versa Consórcios"
                }
            ]
        });


        jQuery(document).ready(function ($) {
            jQuery('.minimize-section').click(function (e) {
                e.preventDefault();
                jQuery('.map-info-section').toggleClass('minimized');
            });
        });
    </script>

}
