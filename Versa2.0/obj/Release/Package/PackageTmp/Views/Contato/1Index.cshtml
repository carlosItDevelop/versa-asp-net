<div class="modal fade" id="EnviarEmailModal" tabindex="-1" role="dialog" aria-labelledby="enviarEmailModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header btn-primary">
                <h5 class="modal-title" id="enviarEmailModalLabel">Envie-nos um e-mail</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">

                <form class="special-contact-form">

                    <div class="form-group">
                        <input type="text" class="form-control w-100" name="special-contact-name" placeholder="Nome" />
                        <input type="email" class="form-control w-100" name="special-contact-email" placeholder="E-mail" />
                        <input type="text" class="form-control w-100" name="special-contact-telefone" placeholder="Telefone" />
                        <input type="tel" class="form-control w-100" name="special-contact-celular" placeholder="Celular" />
                        <textarea class="form-control w-100" rows="3" name="message" placeholder="Sua Mensagem..."></textarea>
                    </div>


                    <a class="btn v-btn standard white sf-icon-stroke" href="#" target="_self">
                        <i class="icon-layers"></i><span class="text">Enviar</span>
                    </a>
                    <a class="btn v-btn standard white sf-icon-stroke" data-dismiss="modal" >
                        <i class="si-icon-folder-close"></i><span class="text">Sair</span>
                    </a>
                </form>
            </div>
            @*<div class="modal-footer">
            <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
            <button type="button" class="btn btn-primary">Save changes</button>
        </div>*@
        </div>
    </div>
</div>


@section Scripts {
    <script src="~/Template/js/jquery.gmap.js"></script>

