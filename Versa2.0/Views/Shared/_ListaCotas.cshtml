@model IEnumerable<Versa2._0.Models.CotasAVenda>


<div class="card card-cascade narrower mt-5">

    <div class="px-4">
        <div class='table-responsive'>
            <!--Table-->
            <table id="tablePreview" class="table blueTable">
                <!--Table head-->
                <thead>
                    <tr>
                        @if (ViewData["Selecao"].ToString() != "2")
                        {
                            <th class="alinha_ao_centro" width="9%">
                                @Html.DisplayNameFor(model => model.Credito)
                            </th>
                            <th class="alinha_ao_centro" width="9%">
                                @Html.DisplayNameFor(model => model.Valor)
                            </th>
                            <th class="alinha_ao_centro" width="6%">
                                @Html.DisplayNameFor(model => model.NumParcela)
                            </th>

                            <th class="alinha_ao_centro" width="10%">
                                @Html.DisplayNameFor(model => model.Parcela)
                            </th>

                            <th class="alinha_ao_centro" width="10%">
                                @Html.DisplayNameFor(model => model.DemaisParcelas)
                            </th>

                            <th width="15%" class="alinha_ao_centro">
                                @Html.DisplayNameFor(model => model.Administradora)
                            </th>

                            <th width="15%" class="alinha_ao_centro">
                                @Html.DisplayNameFor(model => model.TipoCota)
                            </th>
                            <th width="6%"></th>
                        }
                        else
                        {
                            <th class="alinha_ao_centro" width="9%">
                                @Html.DisplayNameFor(model => model.Credito)
                            </th>
                            <th class="alinha_ao_centro" width="9%">
                                @Html.DisplayNameFor(model => model.Valor)
                            </th>
                            <th class="alinha_ao_centro" width="6%">
                                @Html.DisplayNameFor(model => model.NumParcela)
                            </th>

                            <th class="alinha_ao_centro" width="10%">
                                @Html.DisplayNameFor(model => model.Parcela)
                            </th>

                            <th class="alinha_ao_centro" width="10%">
                                @Html.DisplayNameFor(model => model.DemaisParcelas)
                            </th>

                            <th width="15%" class="alinha_ao_centro">
                                @Html.DisplayNameFor(model => model.Administradora)
                            </th>

                            <th width="15%" class="alinha_ao_centro">
                                @Html.DisplayNameFor(model => model.TipoCota)
                            </th>
                            <th width="8%" class="alinha_ao_centro">
                                @Html.DisplayNameFor(model => model.INCC)
                            </th>
                            <th width="6%"></th>
                        }
                    </tr>
                </thead>
                <!--Table head-->
                <!--Table body-->
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td class="alinha_ao_centro">
                                @string.Format("R$ {0:#,##0.00}", item.Credito)
                            </td>
                            <td class="alinha_ao_centro">
                                @string.Format("R$ {0:#,##0.00}", item.Valor)
                            </td>
                            <td class="alinha_ao_centro">
                                @Html.DisplayFor(modelItem => item.NumParcela)
                            </td>

                            <td class="alinha_ao_centro">
                                @string.Format("R$ {0:#,##0.00}", item.Parcela)
                            </td>

                            <td class="alinha_ao_centro">
                                @{
                                    var numpar = item.NumParcela - 1;
                                    var demais = item.DemaisParcelas;
                                    var texto = numpar.ToString() + "x R$ " + demais;

                                    <span> @texto  </span>
                                }
                            </td>

                            <td width="200" class="alinha_ao_centro">
                                @Html.DisplayFor(modelItem => item.Administradora)
                            </td>
                            <td class="alinha_ao_centro">
                                @Html.DisplayFor(modelItem => item.TipoCota)
                            </td>

                            @if (ViewData["Selecao"].ToString() == "2")
                            {
                                <td class="alinha_ao_centro">
                                    @Html.DisplayFor(modelItem => item.INCC)
                                </td>
                            }

                            <td>
                                @Html.ActionLink("Comprar", "Details", null, new { id = item.Id }, new { @class = "btn btn-sm myButton" })

                            </td>
                        </tr>
                    }
                </tbody>
                <!--Table body-->
            </table>
        </div>
